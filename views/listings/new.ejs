<% layout("layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create A New Listing</h3>
        <form method="POST" action="/listing">
            <div class="mb-3">
                <label for="title" class="for-label">Title</label>
                <input type="text" name="listing[title]" placeholder="enter title" class="form-control">
            </div>

            <div class="mb-3">
                <label for="description" class="for-label">Discription</label>
                <textarea name="listing[description]" placeholder="enter discription" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label for="image" class="for-label">Image Link</label>
                <input name="listing[image]" placeholder="enter image url/link" class="form-control">
            </div>

            <div class="mb-3">
                <label for="price" class="for-label">Price</label>
                <input type="number" name="listing[price]" placeholder="enter price" class="form-control">
            </div>

            <div class="mb-3">
                <label for="location" class="for-label">Location</label>
                <input type="text" name="listing[location]" placeholder="enter location" class="form-control">
            </div>

            <div class="mb-3">
                <label for="country" class="for-label">Country</label>
                <input type="text" name="listing[country]" placeholder="enter country" class="form-control">

            </div>

            <button class="btn btn-dark add-btn">ADD</button><br><br>
        </form>
    </div>
</div>